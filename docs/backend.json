{
  "entities": {
    "Location": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Location",
      "type": "object",
      "description": "Represents a physical location with rooms and beds.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Location entity." },
        "name": { "type": "string", "description": "Name of the location." },
        "address": { "type": "string", "description": "Full address of the location." },
        "position": {
          "type": "object",
          "properties": {
            "lat": { "type": "number", "description": "Latitude coordinate of the location." },
            "lng": { "type": "number", "description": "Longitude coordinate of the location." }
          },
          "required": ["lat", "lng"]
        },
        "imageId": { "type": "string", "description": "ID for the placeholder image." },
        "description": { "type": "string", "description": "A description of the location." }
      },
      "required": ["id", "name", "address", "position", "imageId"]
    },
    "Room": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Room",
      "type": "object",
      "description": "Represents a room within a location.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Room entity." },
        "locationId": { "type": "string", "description": "Reference to Location." },
        "name": { "type": "string", "description": "Name of the room." },
        "capacity": { "type": "number", "description": "Maximum capacity of the room." },
        "description": { "type": "string", "description": "Description of the room." }
      },
      "required": ["id", "locationId", "name", "capacity"]
    },
    "Bed": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Bed",
      "type": "object",
      "description": "Represents a bed within a room, with its reservation periods.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Bed entity." },
        "roomId": { "type": "string", "description": "Reference to Room." },
        "locationId": { "type": "string", "description": "Reference to Location." },
        "bedNumber": { "type": "string", "description": "Number or identifier of the bed within the room." },
        "description": { "type": "string", "description": "Description of the bed." },
        "reservations": {
          "type": "array",
          "description": "A list of reservation periods for the bed.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "clientName": { "type": "string" },
              "startDate": { "type": "string", "format": "date-time" },
              "endDate": { "type": "string", "format": "date-time" }
            },
            "required": ["id", "clientName", "startDate", "endDate"]
          }
        }
      },
      "required": ["id", "roomId", "locationId", "bedNumber"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/locations/{locationId}",
        "definition": {
          "entityName": "Location",
          "schema": { "$ref": "#/backend/entities/Location" }
        }
      },
      {
        "path": "/locations/{locationId}/rooms/{roomId}",
        "definition": {
          "entityName": "Room",
          "schema": { "$ref": "#/backend/entities/Room" }
        }
      },
      {
        "path": "/locations/{locationId}/rooms/{roomId}/beds/{bedId}",
        "definition": {
          "entityName": "Bed",
          "schema": { "$ref": "#/backend/entities/Bed" }
        }
      }
    ]
  }
}
